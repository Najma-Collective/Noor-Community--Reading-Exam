    const submitInstructorBtn = document.getElementById('submit-instructor-btn');
    const submissionStatus = document.getElementById('submission-status');
    const startNewBtn = document.getElementById('start-new-btn');

    // --- STATE MANAGEMENT ---
    let timerInterval;
    let appState = {
        studentID: '',
        answers: {},
        currentSlide: 0,
        timerEndTime: null,
        testInProgress: false
    };

    const saveState = () => {
        try {
            localStorage.setItem(LOCAL_STORAGE_KEY, JSON.stringify(appState));
        } catch (e) {
            console.error("Could not save state to localStorage:", e);
        }
    };

    const loadState = () => {
        const savedState = localStorage.getItem(LOCAL_STORAGE_KEY);
        if (savedState) {
            appState = JSON.parse(savedState);
            return true;
        }
        return false;
    };
    
    const clearState = () => {
        localStorage.removeItem(LOCAL_STORAGE_KEY);
        appState = {
            studentID: '',
            answers: {},
            currentSlide: 0,
            timerEndTime: null,
            testInProgress: false
        };
         clearInterval(timerInterval);
    };

    // --- SCREEN MANAGEMENT ---
    const showScreen = (screenName) => {
        Object.values(screens).forEach(screen => screen.classList.add('hidden'));
        if (screens[screenName]) {
            screens[screenName].classList.remove('hidden');
        }
    };

    // --- TEST LOGIC ---
    const startTest = () => {
        appState.studentID = studentIdInput.value.trim();
        if (!appState.studentID) {
            alert('Please enter a Student ID.');
            return;
        }
        
        if (!appState.testInProgress) {
            appState.testInProgress = true;
            appState.timerEndTime = Date.now() + EXAM_DURATION_MINUTES * 60 * 1000;
        }

        levelDisplay.textContent = `Current Level: ${EXAM_LEVEL}`;
        showScreen('test');
        showSlide(appState.currentSlide);
        startTimer();
        saveState();
    };

    const showSlide = (index) => {
        appState.currentSlide = index;
        passageSlides.forEach((slide, i) => {
            slide.classList.toggle('hidden', i !== index);
        });
        updateProgressBar();
        updateNavButtons();
        saveState();
    };

    const updateProgressBar = () => {
        const progress = ((appState.currentSlide + 1) / passageSlides.length) * 100;
        progressBar.style.width = `${progress}%`;
        progressText.textContent = `Passage ${appState.currentSlide + 1} of ${passageSlides.length}`;
    };

    const updateNavButtons = () => {
        prevSlideBtn.disabled = appState.currentSlide === 0;
        if (appState.currentSlide === passageSlides.length - 1) {
            nextSlideBtn.textContent = 'Go to Submission';
        } else {
            nextSlideBtn.textContent = 'Next';
        }
    };

    const handleNavigation = (direction) => {
        const newIndex = appState.currentSlide + direction;
        if (newIndex >= 0 && newIndex < passageSlides.length) {
            showSlide(newIndex);
        } else if (newIndex === passageSlides.length) {
            finishTest();
        }
    };

    // --- TIMER LOGIC ---
    const startTimer = () => {
        if (timerInterval) clearInterval(timerInterval);
        
        timerInterval = setInterval(() => {
            const now = Date.now();
            const timeLeft = appState.timerEndTime - now;

            if (timeLeft <= 0) {
                clearInterval(timerInterval);
                timerDisplay.textContent = '00:00';
                finishTest();
                return;
            }

            const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);
            timerDisplay.textContent = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
        }, 1000);
    };

    // --- ANSWER HANDLING ---
    const recordAnswer = (event) => {
        const input = event.target;
        const questionId = input.dataset.questionId;
        if (questionId) {
            appState.answers[questionId] = input.value.trim();
            saveState();
        }
    };

    const repopulateAnswers = () => {
        studentIdInput.value = appState.studentID || '';
        Object.keys(appState.answers).forEach(qId => {
            const value = appState.answers[qId];
            const inputs = document.querySelectorAll(`[data-question-id="${qId}"]`);
            inputs.forEach(input => {
                if (input.type === 'radio') {
                    if (input.value === value) {
                        input.checked = true;
                    }
                } else {
                    input.value = value;
                }
            });
        });
    };

    // --- SUBMISSION LOGIC ---
    const finishTest = () => {
        clearInterval(timerInterval);
        appState.testInProgress = false;
        saveState();
        prepareSubmission();
        showScreen('submission');
    };
    
    const prepareSubmission = () => {
        let submissionText = `Student ID: ${appState.studentID}\nLevel: ${EXAM_LEVEL}\n\n-- Answers --\n`;
        for (let i = 1; i <= TOTAL_QUESTIONS; i++) {
            const answer = appState.answers[i] || 'No Answer';
            submissionText += `Question ${i}: ${answer}\n`;
        }
        submissionCodeTextarea.value = submissionText;
    };

    const downloadCSV = () => {
        let csvContent = "data:text/csv;charset=utf-8,";
        csvContent += "Level,QuestionNumber,StudentAnswer\r\n";
        for (let i = 1; i <= TOTAL_QUESTIONS; i++) {
            const answer = appState.answers[i] || '';
            csvContent += `${EXAM_LEVEL},${i},"${answer}"\r\n`;
        }

        const encodedUri = encodeURI(csvContent);
        const link = document.createElement("a");
        link.setAttribute("href", encodedUri);
        const fileName = `${appState.studentID || 'student'}_IELTS_Results.csv`;
        link.setAttribute("download", fileName);
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
    };

    const submitToGoogleSheet = async () => {
        const data = {
            studentID: appState.studentID,
            level: EXAM_LEVEL,
            answers: appState.answers
        };

        submissionStatus.textContent = 'Submitting...';
        submitInstructorBtn.disabled = true;

        try {
            const response = await fetch(GS_WEB_APP_URL, {
                method: 'POST',
                mode: 'no-cors', // Important for simple POST requests to Apps Script
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            });
            
            // NOTE: With no-cors, we can't read the response body. 
            // We assume success if the request doesn't throw an error.
            submissionStatus.textContent = 'Successfully submitted!';
            submissionStatus.style.color = 'green';
            
        } catch (error) {
            console.error('Error submitting to Google Sheet:', error);
            submissionStatus.textContent = 'Error: Could not submit. Please download CSV and send manually.';
            submissionStatus.style.color = 'red';
        } finally {
            submitInstructorBtn.disabled = false;
        }
    };

    // --- INITIALIZATION ---
    const init = () => {
        if (loadState() && appState.testInProgress) {
            // Restore an in-progress test
            repopulateAnswers();
            levelDisplay.textContent = `Current Level: ${EXAM_LEVEL}`;
            showScreen('test');
            showSlide(appState.currentSlide);
            startTimer();
        } else {
            // Start fresh
            showScreen('id');
        }

        // --- EVENT LISTENERS ---
        startBtn.addEventListener('click', startTest);
        nextSlideBtn.addEventListener('click', () => handleNavigation(1));
        prevSlideBtn.addEventListener('click', () => handleNavigation(-1));
        downloadCsvBtn.addEventListener('click', downloadCSV);
        submitInstructorBtn.addEventListener('click', submitToGoogleSheet);
        
        startNewBtn.addEventListener('click', () => {
            if(confirm('Are you sure you want to start a new test? Your current results will be cleared.')) {
                clearState();
                window.location.reload();
            }
        });

        document.getElementById('test-screen').addEventListener('change', recordAnswer);
        document.getElementById('test-screen').addEventListener('keyup', recordAnswer);
        studentIdInput.addEventListener('keyup', (e) => {
            appState.studentID = e.target.value.trim();
            saveState();
        });
    };

    init();

});

